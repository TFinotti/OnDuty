@model List<User>
@{
    ViewData["Title"] = "FavoriteProviders";
}

<h2>Your Favorite Providers</h2>

@if (Model.Count == 0)
{
    <p>There is no favorite provider to show.</p>
}
else
{
    <ul class="list-group list-group-flush" style="width: 300px">

        @foreach (var user in Model)
        {
            <li class="list-group-item">

                <div class="card">
                    <h2 class="card-header">@user.Name</h2>
                    <div class="card-body">
                        <h2>@user.Category</h2>
                        <a class="btn btn-primary btn-success" asp-action="CreateBooking" asp-route-Name="@user.Name">Book a service</a>
                    </div>
                </div>
            </li>
        }
    </ul>
}